# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bible_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SCHEMA=bible

# Web Application Configuration
API_BASE_URL=http://localhost:5000
SECRET_KEY=your-secret-key-here
DEBUG=True
PORT=5000
HOST=0.0.0.0

# Data File Paths
# Note: These are relative to project root or absolute paths
LEXICON_HEBREW_FILE=STEPBible-Data/Lexicons/TBESH - Translators Brief lexicon of Extended Strongs for Hebrew - STEPBible.org CC BY.txt
LEXICON_GREEK_FILE=STEPBible-Data/Lexicons/TBESG - Translators Brief lexicon of Extended Strongs for Greek - STEPBible.org CC BY.txt
LEXICON_LSJ_FILE=STEPBible-Data/Lexicons/TFLSJ - Translators Formatted full LSJ Bible lexicon - STEPBible.org CC BY-SA.txt
HEBREW_MORPHOLOGY_FILE=STEPBible-Data/TEHMC - Translators Expansion of Hebrew Morphology Codes - STEPBible.org CC BY.txt
GREEK_MORPHOLOGY_FILE=STEPBible-Data/TEGMC - Translators Expansion of Greek Morphhology Codes - STEPBible.org CC BY.txt
PROPER_NAMES_FILE=STEPBible-Data/TIPNR - Translators Individualised Proper Names with all References - STEPBible.org CC BY.txt
TVTMS_FILE=STEPBible-Data/TVTMS - Translators Versification Traditions with Methodology for Standardisation for Eng+Heb+Lat+Grk+Others - STEPBible.org CC BY.txt

# External API Keys and Configuration
# (Required for external resources integration)
BIBLE_GATEWAY_API_KEY=
ESV_API_KEY=
BIBLE_ORG_API_KEY=
DTL_API_KEY=
ARCHAEOLOGICAL_DB_API_KEY=your-archaeological-db-api-key

# Cache Configuration
CACHE_TYPE=simple  # Options: simple, filesystem, redis, memcached
CACHE_DEFAULT_TIMEOUT=86400  # 24 hours in seconds
CACHE_DIR=./cache  # Directory for filesystem cache (if used)
CACHE_REDIS_URL=redis://localhost:6379/0  # Redis URL (if used)

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Configuration
BATCH_SIZE=1000  # Batch size for ETL operations
MAX_CONNECTIONS=20  # Maximum database connections
QUERY_TIMEOUT=30  # Query timeout in seconds 